<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.UserMapper">
    <select id="getUserByNickname" resultType="com.blog.bean.User">
        select *
        from t_user
        where nickname = #{nickname}
    </select>

    <select id="loadUserByUsername" resultType="com.blog.bean.User">
        select *
        from t_user
        where username = #{username}
    </select>

    <select id="getAllRole" resultType="com.blog.bean.Role">
        select *
        from t_role
    </select>

    <select id="getUserById" resultType="com.blog.bean.User">
        select *
        from t_user
        where id = #{id}
    </select>

    <delete id="deleteUserById">
        delete from t_user
        where id = #{uid}
    </delete>

    <update id="updateUserEnabled">
        update t_user
        set state = #{state}
        where id = #{uid}
    </update>

    <delete id="deleteUserRolesById">
        delete from t_role_user
        where u_id = #{uid}
    </delete>

    <insert id="updateUserRoles">
        insert into t_role_user(r_id,u_id)
        values
        <foreach collection="rids" item="rid" separator=",">
            (#{rid},#{uid})
        </foreach>
    </insert>

</mapper>